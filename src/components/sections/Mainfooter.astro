---
import Linkedin from "../icons/linkedin.astro";
import Intagram from "../icons/instagram.astro";
import Twich from "../icons/twich.astro";
---
       <aside>
			<div>
				<figure>
					<img src="/foto-maxi.jpg" alt="Foto de Maxi" />
					
				</figure>
			</div>
			<section class="list-contact" aria-labelledby="redes-sociales">
				
				<a
					href="https://www.linkedin.com/in/maximiliano-sequeira-lago-a69820299/"
					target="_blank"
					rel="noopener noreferrer"
					class="linkedin"
					aria-label="linkedin"
				>
					<Linkedin class="iconos"/> 
				</a>

				<a
					href="https://www.twitch.tv/maxisl5"
					target="_blank"
					rel="noopener noreferrer"
					class="twich"
					aria-label="twich"
				>
					<Twich class="iconos"/>
					
				</a>

				<a
					href="https://www.instagram.com/maxiiisequeira/"
					target="_blank"
					rel="noopener noreferrer"
					class="insta"
					aria-label="instagram"
				>
					<Intagram class="iconos" /></a
				>
			<section/>
		</aside>

<style>
    aside{
		display: flex;
		justify-content: start;
		align-items: center;
		flex-direction: column;
		gap: 1rem;
		margin-top: 50px;
	
	}
    img {
		max-width: 12vh;
		width: 300px;
		max-height: 12vh;
		border-radius: 50%;
		background-size: cover;
	}
    .list-contact {
		display: flex;
		gap: 15px;
	}
	h1 {
		text-align: center;
	}
	a {
		border-radius: 10px;
		text-decoration: none;
	}
   
</style>